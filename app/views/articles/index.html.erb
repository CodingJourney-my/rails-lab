<article class="wrapper">
  <h1>Articles</h1>
  <% @articles.each do |article| %>
    <div>
      <span><%= article.id %>.</span>
      <%= link_to article.title, article %>
      <% if article.videos.present? %>
        <span>動画あり</span>
      <% end %>
      <% if article.survey.present? %>
        <span>アンケートあり</span>
      <% end %> 
    </div>
    <hr/>
  <% end %>
</article>

<style>
  .wrapper {
    width: 95%;
    margin: 0 auto;
  }
</style>