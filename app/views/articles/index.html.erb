<article class="wrapper">
  <h1>Articles</h1>
  <% @articles.each_with_index do |article, i| %>
    <div>
      <span><%= article.id %>.</span>
      <%= link_to article.title, article %>
      <% if article.videos.present? %>
        <span>動画あり</span>
      <% end %>
      <% if article.survey.present? %>
        <span>アンケートあり</span>
      <% end %> 
    </div>
    <% play_time = article.videos.first.user_video_views.first&.play_time || 0 %>   
    <% total_time = @durations[i] %>
    <% percentage = (play_time / total_time) * 100 %>
    <%= p play_time %>
    <%= p @durations[i] %>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="<%= play_time %>"
        aria-valuemin="0" aria-valuemax="<%= @durations %>" style="width: <%= percentage %>%;">
        <%= percentage %>%
      </div>
    </div>
    <hr/>
  <% end %>
</article>

<style>
  .wrapper {
    width: 95%;
    margin: 0 auto;
  }
  .wrapper h1 {
    font-size: 2em;
    text-align: center;
  }
  .progress {
    height: 20px;
    margin-bottom: 10px;
  }
  .progress-bar {
    height: 100%;
    /* line-height: 20px; */
    color: #fff;
    text-align: center;
    background-color: #337ab7;
  }
</style>